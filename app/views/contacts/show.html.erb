<% if @notice%>
<div class="alert alert-success text-center" role="alert">
  <%= notice %>
</div>
<%end%>

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">ID</th>	
      <th scope="col">Nome</th>
      <th scope="col">Telefone</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row"><%= @contact.id %></th>
      <td><%= @contact.name %></td>
      <td><%= @contact.phone %></td>
    </tr>
    </tbody>
</table>
<%= link_to 'Editar', edit_contact_path(@contact), class:'btn btn-warning' %> |
<%= link_to 'Retornar', contacts_path, class:'btn btn-success' %>
